[flake8]
# Maximum line length (black uses 88 by default, so align with that)
max-line-length = 120

# Ignore specific error codes
# E203: Whitespace before ':' (conflicts with black)
# W503: Line break before binary operator (conflicts with black)
# N802: Function name should be lowercase (allow uppercase for properties matching config constants)
# F811: Redefinition of unused name (FastAPI lifespan pattern uses 'app' parameter)
ignore =
    E203,
    W503,
    N802,
    F811

# Exclude directories from linting
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info,
    .mypy_cache,
    .pytest_cache,
    .tox,
    htmlcov

# Alembic-specific: Allow imports not at top and unused imports in env.py
per-file-ignores =
    alembic/env.py:E402,F401
    __init__.py:F401

# Maximum complexity (optional - catches overly complex functions)
max-complexity = 10
